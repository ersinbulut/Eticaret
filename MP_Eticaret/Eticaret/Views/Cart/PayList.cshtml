@model IEnumerable<Eticaret.Entity.Pay>
@{
    ViewBag.Title = "PayList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div id="mainBody">
    <div class="container">
        <div class="row">
            <!-- Sidebar ================================================== -->
            <div id="sidebar" class="span3">
                @Html.Action("Summary", "Cart")
                <ul id="sideManu" class="nav nav-tabs nav-stacked">
                    @Html.Action("_CategoryList", "Category")
                </ul>
                <br />
                @Html.Action("FeaturedProductList", "Home")
            </div>
            <!-- Sidebar end=============================================== -->
            <div class="span9">


                <h2>Ödeme Seçimi</h2>

                <p>
                    <img src="~/Content/Images/visa.png" width="25" height="25" />
                   @Html.ActionLink("Yeni Ödeme Yöntemi", "CreateUserPay", new { id = TempData["Adressid"] })
                </p>
                <table class="table table-hover">
                    <tr>
                        <th></th>
                        <th>Tür</th>
                        <th>
                            @Html.DisplayNameFor(model => model.CartNumber)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.SecurityNumber)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.CartHasName)
                        </th>
                        <th>
                            Son Kullanma Ay/Yıl
                        </th>
                        <th></th>
                        @*<th>
                                @Html.DisplayNameFor(model => model.UserName)
                            </th>*@
                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <img src="~/Content/Images/visa.png" width="25" height="25" />
                            </td>
                            <td>
                                Kredi Kartı
                            </td>
                            <td>
                                @*@Html.DisplayFor(modelItem => item.CartNumber.Substring(12, 4))*@
                                ***********@item.CartNumber.Substring(12, 4)
                            </td>
                            <td>
                                @*@Html.DisplayFor(modelItem => item.SecurityNumber)*@
                                @item.SecurityNumber.Substring(0, 2)*
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CartHasName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ExpMonth)/@item.ExpYear.ToString().Substring(2, 2)
                            </td>
                            @*<td>
                                    @Html.DisplayFor(modelItem => item.UserName)
                                </td>*@
                            <td>
                                @*@using (Html.BeginForm("CreateOrder", "Cart"))
                                    {
                                        @Html.HiddenFor(modelItem => item.Id)
                                        <button type="submit" class="btn btn-large btn-primary pull-right">Varsayılan Adres Seç<i class=" icon-shopping-cart"></i></button>
                                    }*@
                                @*@Html.ActionLink("Sil", "DeleteUserAddress", new { id = item.Id }, new { @class = "btn btn-medium btn-danger " }) |*@
                                @*@Html.ActionLink("Varsayılan Adres Seç", "CreateOrder", new { id = item.Id }, new { @class = "btn btn-medium btn-primary" })*@
                                <a href="/Cart/DeleteUserPay/@item.Id" class="btn btn-danger">Sil</a>

                                @*<a href="/Cart/CreateOrder/@item.Id" class="btn btn-success">Ödeme Yap <i class="icon-arrow-right"></i></a>*@
                                @Html.ActionLink("Ödeme Yap", "CreateOrder", new { id = item.AddressID, payid = item.Id }, new { @class = "btn btn-medium btn-primary" })
                            </td>
                        </tr>
                    }

                </table>



            </div>


        </div>
    </div>
</div>

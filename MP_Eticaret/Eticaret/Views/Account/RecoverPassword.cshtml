@model Eticaret.ViewModels.RecoverPasswordViewModel
@{
    ViewBag.Title = "RecoverPassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div id="mainBody">
    <div class="container">
        <div class="row">
            <!-- Sidebar ================================================== -->
            <div id="sidebar" class="span3">
                @Html.Action("Summary", "Cart")
                <ul id="sideManu" class="nav nav-tabs nav-stacked">
                    @Html.Action("_CategoryList", "Category")
                </ul>
                <br />
                @Html.Action("FeaturedProductList", "Home")
            </div>
            <!-- Sidebar end=============================================== -->
            <div class="span9">
                @if (TempData["mesaj"] != null)
                {
                    <div class="alert alert-danger alert-dismissable">
                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                        <h4>	<i class="icon fa fa-check"></i> Üzgünüz!</h4>
                        @TempData["mesaj"]

                    </div>
                }
                @if (TempData["mesaj1"] != null)
                {
                    <div class="alert alert-success alert-dismissable">
                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                        <h4>	<i class="icon fa fa-check"></i> Başarılı!</h4>
                        @TempData["mesaj1"]
                    </div>
                }
                <table class="table table-bordered">
                    <tr><th> ŞİFREMİ UNUTTUM </th></tr>
                    <tr>
                        <td>
                            @using (Html.BeginForm("RecoverPassword", "Account", FormMethod.Post, new { @class = "form-horizontal" }))
                            {
                                @Html.AntiForgeryToken()

                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })


                                <div class="control-group">
                                    <label class="control-label" for="inputUsername">Email</label>
                                    <div class="controls">
                                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="control-group">
                                    <div class="controls">
                                        <button type="submit" class="btn btn-success">Şifremi Yolla</button>
                                    </div>
                                </div>
                            }



                        </td>
                    </tr>
                </table>


            </div>
        </div>
    </div>
</div>


